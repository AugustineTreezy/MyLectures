<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/classholder"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lec_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textScaleX="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lec_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center|left"
            android:textStyle="bold"
            android:text="Subject"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lec_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.9"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:padding="2dp"
            android:text="Venue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/image_dir"
            android:layout_width="34dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/loc_lec" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
        android:id="@+id/lec_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
        android:text="Lec Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textScaleX="1" />

        <TextView
            android:id="@+id/lec_tel"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:text="Tel: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textScaleX="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lec_atend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.7"
            android:text="Status:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textScaleX="1" />

        <TextView
            android:id="@+id/lec_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.3"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#8aadff"
            android:textScaleX="1" />
    </LinearLayout>

</LinearLayout>
