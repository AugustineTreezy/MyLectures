<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:weightSum="1">
    <View android:id="@+id/titleDivider"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary" />
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lec1heade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold|italic"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:text="Current Lecture"
        android:ems="10"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lec_start"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:textSize="16dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Started:"
            android:gravity="center|left"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/lec_end"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Ends:"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lec_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        android:paddingLeft="10dp"
        android:text="Subject :"
        android:ems="10"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lec_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:textSize="16dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="By:"
            android:gravity="center|left"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/lec_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Loc :"
            android:gravity="center|left"
            android:paddingLeft="10dp" />

    </android.support.v7.widget.LinearLayoutCompat>



</LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>

    <View android:id="@+id/titleDivider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary" />

<android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lec2heade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="6dp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="2dp"
                android:paddingLeft="10dp"
                android:text="Next Lecture"
                android:ems="10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lec_start_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Starts:"
                    android:gravity="center|left"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/lec_end_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="2dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Ends:"
                    android:gravity="center|left"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lec_sub_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:paddingLeft="10dp"
                android:text="Subject :"
                android:ems="10"/>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lec_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="By:"
                    android:gravity="center|left"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/lec_loc_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="3dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Loc :"
                    android:gravity="center|left"
                    android:paddingLeft="10dp" />

            </android.support.v7.widget.LinearLayoutCompat>



        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
    <View android:id="@+id/titleDivider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary" />

</LinearLayout>
